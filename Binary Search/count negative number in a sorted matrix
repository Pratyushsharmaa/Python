def countNegatives(grid):
    # Implement your solution here
    m, n = len(grid), len(grid[0])
    count = 0
    row, col = n-1, 0
    
    while row>=0 and col<n:
        if grid[row][col]<0:
            count += n-col
            row -= 1
        else:
            col += 1 
            
    return count
